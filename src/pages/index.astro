---
import Layout from "../layouts/Layout.astro";

import "@new-ui/colors";
import "@new-ui/typography";
import "@new-ui/effects";
import "@new-ui/spacings";
import Dashboard from "../components/Dashboard";
---

<Layout
  site="Rise of Machine"
  title="Enhance Your Craft with AI"
  tagline="A curated set of powerful AI tools for makers."
>
  <main>
    <Dashboard client:load />
  </main>
</Layout>

<style>
  h6.separator {
    margin: 1rem 0;
    color: var(--text-secondary);
    display: table;
    white-space: nowrap;
    overflow: hidden;
  }
  h6.separator:after {
    border-top: 2px dotted var(--border-muted);
    content: "";
    display: table-cell;
    position: relative;
    top: var(--spacing-06);
    width: 100%;
  }
  h6.separator:before {
    right: 1%;
  }
  h6.separator:after {
    left: 1%;
  }
</style>